<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dad7d7"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#000" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/me_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/set" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/me_touxian"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/zhuce_top"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp"
            android:gravity="left" >

            <ImageView
                android:id="@+id/me_changeimg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:src="@drawable/img1" />

            <TextView
                android:id="@+id/me_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/me_changeimg"
                android:text="某某某"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/me_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/me_name"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/me_changeimg"
                android:text="手机号码："
                android:textColor="#979792"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/me_myphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/me_name"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/me_phone"
                android:text="12345678"
                android:textColor="#979792"
                android:textSize="10dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/me_School"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/me_touxian"
        android:background="@android:color/white" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/me_school" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="学校："
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/me_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="1234567"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/me_School"
        android:background="#e7e7e7" />

    <LinearLayout
        android:id="@+id/me_Dormitory"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/view1"
        android:background="@android:color/white" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/me_dormatory" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="宿舍："
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/me_dormitory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="12345678"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/me_School"
        android:background="#e7e7e7" />

    <LinearLayout
        android:id="@+id/me_Money"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/view1"
        android:background="@android:color/white"
        android:clickable="true" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/me_dormatory" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="零钱："
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/me_momey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="5"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/me_night"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/me_Dormitory"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/renews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/me_sofe" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/renews"
            android:gravity="center"
            android:text="版本更新"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="当前版本0.1"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/bangbenrenews"
        android:background="#e7e7e7" />

    <RelativeLayout
        android:id="@+id/aboutme"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/view4"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:clickable="true" >

        <ImageView
            android:id="@+id/aboutread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/me_save" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/aboutread"
            android:gravity="center"
            android:text="关于我们"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/about_soft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:clickable="true"
            android:src="@drawable/me_toanother" />
    </RelativeLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/aboutme"
        android:background="#e7e7e7" />

    <RelativeLayout
        android:id="@+id/yijianfankui"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/view5"
        android:background="@android:color/white"
        android:clickable="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/me_mess" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/feedback"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/about_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/me_toanother" />
    </RelativeLayout>

</LinearLayout>