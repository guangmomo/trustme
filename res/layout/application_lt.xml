<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:clickable="true"
    android:id="@+id/application_list"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:layout_marginLeft="4dp"
        android:id="@+id/applicatione_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
         >

        <TextView
            android:id="@+id/application_sendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7e7e7e"
            android:textSize="12dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/cpplicaton_chatcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:maxLength="30"
            android:text="1111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111" />
    </LinearLayout>

</LinearLayout>